<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.view.ProductDetailsFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProductDetails"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="Product Image"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtProductDetailsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Product Name"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:textSize="24sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="@string/price"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                    <TextView
                        android:id="@+id/txtProductDetailsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="5dp"
                        tools:text="R$ 199.90"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="Possible installments: "
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                    <TextView
                        android:id="@+id/txtProductDetailsInstallments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="5dp"
                        tools:text="R$ 199.90"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtProductDetailsPromotionTrue"
                    android:textColor="@color/discount_color"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_slab_bold"
                    tools:text="ON SALE!!"/>

                <LinearLayout
                    android:id="@+id/layoutSale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/discount_color"
                        android:textStyle="bold"
                        tools:text="Get it now for only: "
                        android:fontFamily="@font/roboto_slab_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtProductDetailsPromotionPrice"
                        android:textColor="@color/discount_color"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        tools:text="ON SALE!!"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textSize="16sp"
                        android:text="Available Sizes:"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtProductDetailsSizes"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="16sp"
                        tools:text="P, M, GG"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>